<!DOCTYPE html>
<html>
  <head>
    <title>BudgetApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if notice %>
    <p class="notice"><%= notice %></p>
<% end %>
<% if alert %>
    <p class="alert"><%= alert %></p>
<% end %>

<% if flash[:success] %>
  <p class="notice"><%= sanitize(flash[:success]) %></p>
<% end %>
<% if flash[:error] %>
  <div class="alert">
  <ul>
    <% flash[:error].each do |e| %>
      <li><%= e %></li>
    <% end %>
  </ul>
  </div>
<% end %>

<%= yield %>
    
    <script src="https://kit.fontawesome.com/e32d72064d.js" crossorigin="anonymous"></script>
  </body>
</html>
